class Solution {
    
    public int minCostToMoveChips(int[] arr) {
        int EvenCount = 0;
        int OddCount = 0;
        for(int i=0; i<arr.length; i++){
            if((arr[i]&1)==0){
                EvenCount++;
            }
            else{
                OddCount++;
            }
        }
            return EvenCount<OddCount?EvenCount:OddCount;
            
        }
    }
        
