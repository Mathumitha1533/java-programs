package twodArrayBased;
import java.util.*;

public class MaxInRow {

	public static void main(String[] args) {

								Scanner sc = new Scanner(System.in);
								int r = sc.nextInt();
								int c = sc.nextInt();
								int max = Integer.MIN_VALUE;
								int row =-1;
								int arr[][] = new int[r][c];
								for(int i =0; i<r;i++) {
									for(int j=0; j<c ; j++) {
										arr[i][j]= sc.nextInt();
									}
								}
								for(int i =0; i<r;i++) {
									int sum=0;
									for(int j=0; j<c ; j++) {
										sum+=arr[i][j];
									}
										
									
									if(max<sum) {
										max = sum;
										row =i;
									}
								}
								System.out.println(max);
								System.out.println(row);
								// TODO Auto-generated method stub

							

						





					}

				


		
		}
